<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.assignment.buaamc14.facerecog.UploadActivity">

    <TextView
        android:id="@+id/upload_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="等待接受结果"
        android:textSize="30sp" />



    <ImageView
        android:id="@+id/iv_register"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="34dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_menu_gallery"
        android:layout_below="@+id/upload_result"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="刷新结果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register_result"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="21dp" />

    <Button
        android:text="上传"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_register_result"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp"
        android:id="@+id/btn_register_upload" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_register_ID"
        android:hint="在此输入上传的ID"
        android:layout_above="@+id/btn_register_result"
        android:layout_alignStart="@+id/iv_register"
        android:layout_marginBottom="31dp"
        android:text="5" />
</RelativeLayout>
